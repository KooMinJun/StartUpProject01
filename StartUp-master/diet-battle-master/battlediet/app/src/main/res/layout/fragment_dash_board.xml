<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="diet.battle.com.battlediet.MainActivity">

    <LinearLayout
        android:id="@+id/content_viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">


    </LinearLayout>


    <LinearLayout
        android:id="@+id/background_viewPager"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/base_activity_main"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/my_profile"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="50dp"
                android:padding="10dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="김상큼"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="-10dp"
                            android:layout_marginBottom="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingRight="-30dp"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="현재 체중"
                                    android:textSize="12dp"
                                    android:textColor="#9b9b9b"
                                    android:layout_weight="3"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textSize="30dp"
                                    android:textColor="#ff2d2d"
                                    android:text="56Kg"/>


                            </LinearLayout>
                            <ImageView
                                android:background="@drawable/line"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_height="42dp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingLeft="-30dp"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="목표 체중"
                                    android:textSize="12dp"
                                    android:textColor="#9b9b9b"
                                    android:layout_weight="3"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textSize="30dp"
                                    android:textColor="#ff2d2d"
                                    android:text="51Kg"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"

                android:src="@drawable/profile_pic" />
        </RelativeLayout>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/vs_battle"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:textSize="12dp"
                        android:textColor="#9b9b9b"
                        android:text="현재 진행중인 배틀"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="12dp"
                        android:textColor="#f32128"
                        android:text="D-12"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:background="@drawable/battlevs"
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="90dp" />
                    </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/check_todolist"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ff4d4d"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="오늘 할일"
                    android:layout_weight="6"/>
                <com.astuetz.PagerSlidingTabStrip
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:pstsShouldExpand="true"
                    android:id="@+id/dash_board_tabs"
                    app:pstsIndicatorHeight="1dp"
                    app:pstsIndicatorColor="#ff4d4d"
                    >
                </com.astuetz.PagerSlidingTabStrip>
                <diet.battle.com.battlediet.View.CustomViewPager
                    android:id="@+id/dash_board_viewpager"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"
                    android:background="#FFFFFF">
                </diet.battle.com.battlediet.View.CustomViewPager>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
